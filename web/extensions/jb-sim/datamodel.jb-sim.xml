	<classes>
		<class id="SimCard" _delta="define">
			<!-- Inherits too many attributes, but most logical place -->
			<parent>PhysicalDevice</parent>
			<properties>
				<category>bizmodel,searchable,structure</category>
				<abstract>false</abstract>
				<key_type>autoincrement</key_type>
				<db_table>simcard</db_table>
				<db_key_field>id</db_key_field>
				<naming>
					<attributes>
						<attribute id="name"/>
					</attributes>
				</naming>
				<order>
					<columns>
						<column id="name" ascending="true"/>
					</columns>
				</order>
				<reconciliation>
					<attributes>
						<attribute id="name"/>
					</attributes>
				</reconciliation>
				<icon>images/sim.png</icon>
			</properties>
			<fields>
				<field id="sim" xsi:type="AttributeString">
					<sql>sim</sql>
					<is_null_allowed>false</is_null_allowed>
					<default_value/>
				</field>
				<field id="contact_id" xsi:type="AttributeExternalKey">
					<sql>contact_id</sql>
					<is_null_allowed>true</is_null_allowed>
					<allow_target_creation>true</allow_target_creation>
					<on_target_delete>DEL_AUTO</on_target_delete>
					<target_class>Contact</target_class>
				</field>
				<field id="functionalci_id" xsi:type="AttributeExternalKey">
					<sql>functionalci_id</sql>
					<is_null_allowed>true</is_null_allowed>
					<allow_target_creation>true</allow_target_creation>
					<on_target_delete>DEL_AUTO</on_target_delete>
					<target_class>FunctionalCI</target_class>
					<filter>SELECT FunctionalCI WHERE finalclass IN ('MobilePhone', 'PC', 'Tablet')</filter>
				</field>
				<field id="phone_number" xsi:type="AttributeString">
					<sql>phone_number</sql>
					<is_null_allowed>true</is_null_allowed>
					<default_value/>
				</field>
				<field id="pin" xsi:type="AttributeString">
					<sql>pin</sql>
					<is_null_allowed>true</is_null_allowed>
					<default_value/>
				</field>
				<field id="puk" xsi:type="AttributeString">
					<sql>puk</sql>
					<is_null_allowed>true</is_null_allowed>
					<default_value/>
				</field>
				<field id="pin2" xsi:type="AttributeString">
					<sql>pin2</sql>
					<is_null_allowed>true</is_null_allowed>
					<default_value/>
				</field>
				<field id="puk2" xsi:type="AttributeString">
					<sql>puk2</sql>
					<is_null_allowed>true</is_null_allowed>
					<default_value/>
				</field>
				<field id="type" xsi:type="AttributeEnum">
					<sql>type</sql>
					<is_null_allowed>true</is_null_allowed>
					<default_value/>
					<values>
						<value id="regular">regular</value>
						<value id="regular_to_micro">regular_to_micro</value>
						<value id="regular_to_nano">regular_to_nano</value>
						<value id="micro">micro</value>
						<value id="micro_to_nano">micro_to_nano</value>
						<value id="nano">nano</value>
					</values>
				</field>
			</fields>
			<methods/>
